<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-tomcat</actionName>
        <displayName>tomcat</displayName>
        <goals>
            <goal>package</goal>
            <goal>tomcat7:run</goal>
        </goals>
        <properties>
            <jpda.listen>maven</jpda.listen>
            <Env.MAVEN_OPTS>-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=10999 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.hostname="localhost"</Env.MAVEN_OPTS>
        </properties>
    </action>
</actions>
